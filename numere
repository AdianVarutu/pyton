numar = int(input("introduceti un nr: "))

oglindit = 0
clona = numar
lista=[]

while clona>0:
    cifra = clona%10
    lista.append(cifra)
    oglindit = oglindit *10 +cifra
    clona = clona//10
    
print(f"Oglinditul numarului {numar} este: {oglindit}")


print(lista)
