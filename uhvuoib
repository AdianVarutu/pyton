number =  float (input("Introduceti primul numar:"))
number2 = float  (input("Introduceti al doilea numar:"))

operatia = input("intoduceti o operatie:")

if operatia=="+":
    rezultat = number+number2
elif operatia=="-":
    rezultat = number-number2
elif operatia=="*":
    rezultat = number*number2
elif operatia=="/":
    rezultat = number/number2
elif operatia=="modul":
    rezultat = number % number2 
elif operatia=="med arit":
    rezultat = (number+number2)/2
elif operatia=="ridicare la putere":
    rezultat = number*number+number2*number2
elif operatia=="putete":
    rezultat = pow(number, number2)
print("rezultatul este: ")
print(int(rezultat))
